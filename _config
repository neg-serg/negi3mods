exec_always make -C $i3 &
exec_always $i3/negi3mods.py >> ~/tmp/negi3mods.log 2>&1 &
exec_always pkill -f 'mpc idle'
exec_always pkill polybar
exec_always pkill sxhkd; sxhkd &
exec_always [[ $(pgrep polybar|wc -l) -le 1  ]] && polybar -c $XDG_CONFIG_HOME/polybar/main main &
exec --no-startup-id caffeine &
exec --no-startup-id sleep 1s && ${XDG_CONFIG_HOME}/i3/send circle next term
