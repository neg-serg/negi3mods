ENV=$HOME/.profile; export ENV
log_dir="${HOME}/tmp"
if [ ! -d "$log_dir" ] && [ ! -L "$log_dir" ]; then
    if ! mkdir -v "$log_dir"; then
        echo "cannot create target $log_dir directory, fail :("
        exit 1
    fi
fi

$XDG_CONFIG_HOME/negi3wm/negi3wm.py --start >> $log_dir/negi3wm.log 2>&1 &
