#!/bin/dash
gset="gsettings set"

font='Iosevka Heavy 12'
icons='korla'
gtk_theme='oomox-NegDark'
cursor_theme='SpaceKCursors'
cursor_size='64'

$gset org.gnome.desktop.background show-desktop-icons false
$gset org.gnome.desktop.interface clock-show-date false
$gset org.gnome.desktop.interface cursor-size "$cursor_size"
$gset org.gnome.desktop.interface cursor-theme "$cursor_theme"
$gset org.gnome.desktop.interface document-font-name "$font"
$gset org.gnome.desktop.interface font-name "$font"
$gset org.gnome.desktop.interface gtk-key-theme Emacs
$gset org.gnome.desktop.interface gtk-theme "$gtk_theme"
$gset org.gnome.desktop.interface icon-theme "$icons"
$gset org.gnome.desktop.interface monospace-font-name "$font"
$gset org.gnome.desktop.interface text-scaling-factor '1'
$gset org.gnome.desktop.wm.preferences titlebar-font "$font"
$gset org.gnome.settings-daemon.plugins.xsettings antialiasing 'grayscale'
$gset org.gnome.settings-daemon.plugins.xsettings hinting 'slight'
$gset org.gnome.settings-daemon.plugins.xsettings overrides "[{'Gdk/WindowScalingFactor', <2>}]"
